        <item name="android:statusBarColor" tools:targetApi="l">#2C384A</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.Jobsito">
        <item name="android:windowBackground">@drawable/carga</item>
    </style>
